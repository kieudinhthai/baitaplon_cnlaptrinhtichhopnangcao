  </head>
  <body>

    <%-include('../partials/sidebarAdmin.ejs')%>

   <div class="page">
    <%-include('../partials/headerAdmin.ejs')%>
    <section class="dashboard-counts section-padding">
      <div class="container-fluid">
        <div class="row">
          <!-- Count item widget-->
          <div class="col-xl-6 col-md-6 col-12 d-flex justify-content-center">
            <div class="wrapper count-title d-flex">
              <div class="icon"><i class="fab fa-product-hunt"></i></div>
              <div class="name"><strong class="text-uppercase">All Product</strong>
                <div class="count-number  text-center"><%=products.length%></div>
              </div>
            </div>
          </div>
          <!-- Count item widget-->
          <div class="col-xl-6 col-md-6 col-12 d-flex justify-content-center">
            <div class="wrapper count-title d-flex">
              <div class="icon"><i class="fas fa-store"></i></div>
              <div class="name"><strong class="text-uppercase">All Category</strong>
                  
                <div class="count-number text-center"><%=categories.length%></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="container px-5 table-responsive">
      <h1>Table products </h1>
      <table id="example" class="table table-striped data-table">
        <thead>
          <tr> 
              <th>STT</th>  
              <th>name</th>
              <th>description</th>
              <th>price</th>
              <th>_ID</th>
              <th></th>
          </tr>
      </thead>
      <tbody>
        <% var i =1; products.forEach(function(data) { %>
          <tr>
              <td scope="row"><%=i++ %></td>
              <td><%=data.name %></td>
              <td><%=data.description %></td>
              <td><%=data.price %></td>
              <td><%=data._id %></td>
              <td><a id="data._id" data-toggle="modal"
                data-target="#modalEdit" href=""><i
                    class="fas fa-edit"></i></a>
        </td>
            <td><a id="data._id" data-toggle="modal"
                    data-target="#exampleModalLong" data-id="<%=data._id%>" href=""><i
                        style="color: red;" class="fas fa-trash-alt"></i></a>
            </td>
          </tr>
          <% }); %>  
          
      </tbody>

      </table>
    </section>
   </div>

 <!-- Modal -->
 <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
 aria-labelledby="exampleModalLongTitle" aria-hidden="true">
 <div class="modal-dialog" role="document">
     <div class="modal-content">
         <div class="modal-header">
             <h5 class="modal-title" id="exampleModalLongTitle">Xóa sản phẩm</h5>
             <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
             </button>
         </div>
         <div class="modal-body">
             Bạn muốn xóa sản phẩm này ?
         </div>
         <div class="modal-footer">
             <button type="button" id="btn-delete" class="btn btn-primary">Delete</button>
             <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>

         </div>
     </div>
 </div>
</div>


<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog"
aria-labelledby="exampleModalLongTitle" aria-hidden="true">
<div class="modal-dialog modal-dialog-edit" role="document">
 <div class="modal-content">
     <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLongTitle">Chỉnh sửa thông tin sản phẩm</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
             <span aria-hidden="true">&times;</span>
         </button>
     </div>
     <div class="modal-body">
         <form class="form-horizontal">
             <div class="form-group row">
               <label class="col-sm-2 form-control-label">Tên tiếng việt</label>
               <div class="col-sm-10">
                 <input type="text" class="form-control">
               </div>
             </div>
             <div class="form-group row">
                 <label class="col-sm-2 form-control-label">Tên tiếng anh</label>
                 <div class="col-sm-10">
                   <input type="text" class="form-control">
                 </div>
               </div>
               <div class="form-group row">
                 <label class="col-sm-2 form-control-label">Category</label>
                 <div class="col-sm-10 mb-3">
                   <select name="account" class="form-control">
                     <option>Lay </option>
                     <option>tu</option>
                     <option>database</option>
                     <option>ra nha</option>
                   </select>
                 </div>
               </div>
               <div class="form-group row">
                 <label class="col-sm-2 form-control-label">Mô tả</label>
                 <div class="col-sm-10">
                   <input type="text" class="form-control">
                 </div>
               </div>
               <div class="form-group row">
                 <label class="col-sm-2 form-control-label">Giá</label>
                 <div class="col-sm-10">
                   <input type="text" class="form-control">
                 </div>
               </div>

               <div class="form-group row">
                 <label class="col-sm-2 form-control-label">Hình ảnh</label>
                 <div class="col-sm-10">
                   <input type="file" class="form-control">
                 </div>
               </div>
             <div class="line"></div>
           </form>
     </div>
     <div class="modal-footer">
         <button type="button" class="btn btn-primary">Save changes</button>
         <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>

     </div>
 </div>
</div>
</div>

  <form name="delete-form"  method="POST"></form>

<script>
 
  document.addEventListener('DOMContentLoaded', function(){
    var productID;
    var btnDelete = document.getElementById('btn-delete');
    var deleteForm = document.forms['delete-form']

     //when dialog confirm clicked
    $('#exampleModalLong').on('show.bs.modal', function(event){
    var button = $(event.relatedTarget);
    productID = button.data('id')
   

  })
 
  btnDelete.onclick = function(){
  deleteForm.action='/admin/delete/'+productID+'?_method=DELETE';
  deleteForm.submit()
  }
  })

</script>
